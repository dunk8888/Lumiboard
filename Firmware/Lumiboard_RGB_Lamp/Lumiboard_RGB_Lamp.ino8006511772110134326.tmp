#define  LED1_R  11
#define  LED1_G  10
#define  LED1_B  9

#define  LED2_R  6
#define  LED2_G  5
#define  LED2_B  3

#define  DEBUG_LED  13

#define  BT_RX  7
#define  BT_TX  12

unsigned int LED1_RGB[3] = {255,0,0};

void setup() {  
  // Blink Debug LED to verify sketch starting
  digitalWrite(DEBUG_LED, HIGH);
  delay(1000);
  digitalWrite(DEBUG_LED, LOW);
}

void loop() {
  for(byte decColor = 0; decColor < 3; decColor++) {
    byte incColor = decColor + 1;
    if(decColor > 3)  incColor = 0;
    
    for(int i=0; i<255; i++) {
      LED1_RGB[decColor] -= 1;
      LED1_RGB[incColor] += 1;
      
      updateLEDs();
      delay(5);
    }
  }
}

void updateLEDs() {
  // Update LED 1
  analogWrite(LED1_R, LED1_RGB[0]);
  analogWrite(LED1_G, LED1_RGB[1]);
  analogWrite(LED1_B, LED1_RGB[2]);
}
